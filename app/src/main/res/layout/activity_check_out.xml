<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".CheckOut">

    <TextView
        android:id="@+id/txtepfOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="28dp"
        android:text="EPF"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_locationOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="28dp"
        android:text="Current Out Location"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/longiOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="28dp"
        android:hint="Longitude-Out"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/latiOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="28dp"
        android:hint="Latitude-Out"
        android:textSize="18sp"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/txttimeOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="28dp"
        android:hint="Time-Out"
        android:textSize="18sp"
        android:textStyle="bold"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check-Out"
        android:id="@+id/btnOut"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:width="250dp"
        android:layout_marginTop="100dp"
        >

    </Button>

</LinearLayout>